@model EntityLayer.Concrete.Medicine
@{
    ViewBag.Title = "IlacKarsilastir";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>IlacKarsilastir</h2>



<div class="row">
    <div class="col-md-4">
        <form id="medicineForm" novalidate class="needs-validation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name1" class="control-label"></label>
                <input asp-for="Name1" type="text" class="form-control" id="name1" required />
                <span asp-validation-for="Name1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name2" class="control-label"></label>
                <input asp-for="Name2" type="text" class="form-control" id="name2" required />
                <span asp-validation-for="Name2" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <button type="button" class="btn btn-primary" onclick="submitStudent()">Submit</button>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    function submitStudent() {
        var data = $("#medicineForm").serialize();
        console.log(data);
        alert(data);
        $.ajax({
            type: 'POST',
            url: '/Medicine/IlacKarsilastir',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
            data: data,
            success: function (result) {
                alert('Successfully received Data ');
                console.log(result);
            },
            error: function () {
                alert('Failed to receive the Data');
                console.log('Failed ');
            }
        })
    }

</script>